<!DOCTYPE html>
<html>
<head>
  <title>Real Estate APP</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed|Roboto|Roboto+Slab' rel='application' type='text/css'>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
<header>
  <% if current_user %>
    <div class="logout"> <%= link_to 'Logout', logout_path %></div>
    <div class="username"> <%= current_user.email %></div>
    <div id="header_container">
  <% end %>
  </div>
</header>
<% if flash.each do |name, msg| %>
  <div class="welcome_flash">
    <%= content_tag :div, msg, class: name %>
<% end %>
  </div>
<% end %>
<div id="content_container">
  <%= yield %>
</div>

<footer>
</footer>
</body>
</html>
